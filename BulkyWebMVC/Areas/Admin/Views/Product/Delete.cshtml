@model Bulky.Models.Models.Product

<div class="container py-5">
    <div class="card shadow-lg rounded">
        <div class="card-header bg-danger text-white d-flex align-items-center">
            <i class="bi bi-trash-fill fs-3 me-3"></i>
            <h2 class="mb-0">Delete Product</h2>
        </div>
        <div class="card-body p-4">
            <h5 class="mb-4 text-danger">
                Are you sure you want to delete this product?
            </h5>

            <form asp-action="Delete" asp-controller="Product" method="post" novalidate>
                <input type="hidden" asp-for="Id" />

                <div class="row mb-3">
                    <label asp-for="Title" class="col-sm-3 col-form-label fw-semibold">
                        <i class="bi bi-tag-fill me-2 text-danger"></i> Title
                    </label>
                    <div class="col-sm-9">
                        <input asp-for="Title" class="form-control form-control-lg" disabled />
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="Description" class="col-sm-3 col-form-label fw-semibold">
                        <i class="bi bi-card-text me-2 text-danger"></i> Description
                    </label>
                    <div class="col-sm-9">
                        <textarea asp-for="Description" rows="4" class="form-control" disabled></textarea>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="ISBN" class="col-sm-3 col-form-label fw-semibold">
                        <i class="bi bi-upc-scan me-2 text-danger"></i> ISBN
                    </label>
                    <div class="col-sm-9">
                        <input asp-for="ISBN" class="form-control" disabled />
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="Author" class="col-sm-3 col-form-label fw-semibold">
                        <i class="bi bi-person-fill me-2 text-danger"></i> Author
                    </label>
                    <div class="col-sm-9">
                        <input asp-for="Author" class="form-control" disabled />
                    </div>
                </div>

                <hr />

                <div class="row mb-3">
                    <label asp-for="ListPrice" class="col-sm-3 col-form-label fw-semibold">
                        <i class="bi bi-cash-stack me-2 text-danger"></i> List Price
                    </label>
                    <div class="col-sm-9">
                        <input asp-for="ListPrice" type="number" step="0.01" class="form-control" disabled />
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="Price" class="col-sm-3 col-form-label fw-semibold">
                        <i class="bi bi-currency-dollar me-2 text-danger"></i> Price
                    </label>
                    <div class="col-sm-9">
                        <input asp-for="Price" type="number" step="0.01" class="form-control" disabled />
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="Price50" class="col-sm-3 col-form-label fw-semibold">
                        <i class="bi bi-basket3-fill me-2 text-danger"></i> Price 50+
                    </label>
                    <div class="col-sm-9">
                        <input asp-for="Price50" type="number" step="0.01" class="form-control" disabled />
                    </div>
                </div>

                <div class="row mb-4">
                    <label asp-for="Price100" class="col-sm-3 col-form-label fw-semibold">
                        <i class="bi bi-basket-fill me-2 text-danger"></i> Price 100+
                    </label>
                    <div class="col-sm-9">
                        <input asp-for="Price100" type="number" step="0.01" class="form-control" disabled />
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-3">
                    <button type="submit" class="btn btn-danger btn-lg shadow">
                        <i class="bi bi-trash me-2"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow">
                        <i class="bi bi-arrow-left me-2"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
