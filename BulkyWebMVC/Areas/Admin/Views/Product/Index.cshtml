@using Bulky.Models.Models;
@model IEnumerable<Product>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary fw-bold">Product List</h1>
        <a asp-controller="Product" asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-bag-plus-fill me-2"></i> Create New Product
        </a>
    </div>

    <div class="table-responsive shadow rounded">
        <table class="table table-striped table-hover align-middle mb-0 bg-white">
            <thead class="table-primary text-uppercase">
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">ISBN</th>
                    <th scope="col">Author</th>
                    <th scope="col">List Price</th>
                    <th scope="col">Price</th>
                    <th scope="col">Price 50+</th>
                    <th scope="col">Price 100+</th>
                    <th scope="col" style="width: 180px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td class="fw-semibold">@obj.Title</td>
                        <td>@obj.Description</td>
                        <td>@obj.ISBN</td>
                        <td>@obj.Author</td>
                        <td>@obj.ListPrice</td>
                        <td>@obj.Price</td>
                        <td>@obj.Price50</td>
                        <td>@obj.Price100</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-route-id="@obj.Id" asp-controller="Product" asp-action="Edit" class="btn btn-outline-primary btn-sm d-flex align-items-center">
                                    <i class="bi bi-pencil-square me-1"></i> Edit
                                </a>
                                <a asp-route-id="@obj.Id" asp-controller="Product" asp-action="Delete" class="btn btn-outline-danger btn-sm d-flex align-items-center ms-2">
                                    <i class="bi bi-trash3 me-1"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
