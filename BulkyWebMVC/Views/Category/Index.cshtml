@using Bulky.Models.Models
@model List<Category>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary fw-bold">Category List</h1>
        <a asp-controller="Category" asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-bag-plus-fill me-2"></i> Create New Category
        </a>
    </div>

    <div class="table-responsive shadow rounded">
        <table class="table table-striped table-hover align-middle mb-0 bg-white">
            <thead class="table-primary text-uppercase">
                <tr>
                    <th scope="col">Category Name</th>
                    <th scope="col" style="width: 150px;">Display Order</th>
                    <th scope="col" style="width: 180px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(x => x.DisplayOrder))
                {
                    <tr>
                        <td class="fw-semibold">@obj.Name</td>
                        <td>@obj.DisplayOrder</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-route-id="@obj.Id" asp-controller="Category" asp-action="Edit" class="btn btn-outline-primary btn-sm d-flex align-items-center">
                                    <i class="bi bi-pencil-square me-1"></i> Edit
                                </a>
                                <a asp-route-id="@obj.Id" asp-controller="Category" asp-action="Delete" class="btn btn-outline-danger btn-sm d-flex align-items-center ms-2">
                                    <i class="bi bi-trash3 me-1"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
